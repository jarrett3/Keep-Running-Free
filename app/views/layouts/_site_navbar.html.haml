  / Use 'Toggle' and 'Brand' for better mobile
  .container
    %div#nav_social.navbar-right{style: "margin-right: -83px;"}
      %div{style: "border-right: 1px #ccc solid; width: 120px; height: 30px;"}
        %a{:href => "https://www.facebook.com/meticufit"}
          = image_tag("nav_facebook.png", :size => "30x30")
        %a{:href => "https://twitter.com/Meticufit"}
          = image_tag("nav_twitter.png", :size => "30x30")
      / %a{:href => "/"}
