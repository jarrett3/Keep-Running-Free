        .form-group
          %label.sr-only Email address
          %input.form-control{placeholder: "Subscribe - Email", type: "email"}
        %button.btn.btn-default.btn-md{type: "button", type: "submit"}
          %span.glyphicon.glyphicon-envelope
    %div.navbar-header
      %button.navbar-toggle{"data-target" => "#nav-collapse", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a{style: "position: absolute; z-index: 1", :href => "/"}
        = image_tag("Logo3.png");image_tag("nav_image.png")
        %a.navbar-brand{:href => "/", style: "position: absolute; z-index: 2"}
          = image_tag("Logo3.png")
      #slogan{style: "z-index: 2; font-weight: bold; color: #000; opacity: 1.0;"}
        "Fitness, Training, Nutrition - Simplified"

    %div.navbar-right#nav-collapse.collapse.navbar-collapse.hidden-xs{style: "padding-top: 90px; margin-right: -296px;"}
      %ul.nav.navbar-nav
        %li#nav_button{class: @current_section=='home' && 'active'}= link_to 'Home', '/'
