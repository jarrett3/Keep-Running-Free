#side_bar
	.row{style:"width: 220px; height: 200px"}
		%ul#side_tab.nav.nav-tabs
			%li= link_to 'Recent', '#recent', 'data-toggle' => 'tab'
			%li= link_to 'Popular', '#popular', 'data-toggle' => 'tab'
			%li= link_to "KRF", '#whatsnew', 'data-toggle' => 'tab'
		#side_tabContent.tab-content
			#recent.tab-pane.active
				%ul
					- Post.limit(3).each do |post|
						%li= link_to post.title, post
			#popular.tab-pane
				%p
					popular popular popular popular popular popular popular popular popular popular 
			#whatsnew.tab-pane
				%p
					more cool stuf asdf sfsdf sadfsadf dsf sadf dsf dsf asdf asdf sadf 
	#side_ad.row{style:"border-top: 1px solid #ddd; width: 220px; height: 200px"}
		/ = render '/layouts/ad_200x200'
	#side_mail.row{style:"border-top: 1px solid #ddd; width: 220px; height: 200px"}
		/ = render '/layouts/newsletter'

